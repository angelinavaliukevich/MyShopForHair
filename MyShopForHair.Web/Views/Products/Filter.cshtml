@model ProductsViewModel

<form asp-controller="Products" asp-action="Filter" asp-antiforgery="true" method="post">
    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description"></label><br />
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Price"></label><br />
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="BrandId">Brands</label><br />
        <select asp-for="BrandId" asp-items="Model.BrandsAll"></select>
        <span asp-validation-for="BrandId"></span>
    </div>
    <div>
        <label asp-for="GroupId">Group</label><br />
        <select asp-for="GroupId" asp-items="Model.GroupsAll"></select>
        <span asp-validation-for="GroupId"></span>
    </div>
    <div>
        <label asp-for="CriteriaId">Criteria</label><br />
        <select asp-for="CriteriaId" asp-items="Model.CriterialAll"></select>
        <span asp-validation-for="CriteriaId"></span>
    </div>
    <button class="mt-3 btn btn-primary" type="submit">Filter</button>
</form>


