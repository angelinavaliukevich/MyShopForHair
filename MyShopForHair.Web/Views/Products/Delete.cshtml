@{
    ViewData["Title"] = "Products";
}

@model IEnumerable<ProductsViewModel>


<h1 class="text-danger">DELETE</h1>
<div class="list-group">
    @foreach (var products in Model)
    {
        <a asp-action="Delete" asp-route-id="@products.Id" class="list-group-item list-group-item-action">
            @products.Name
            (Brand: @products.Brand.Name) @products.Group.Name 
            <br>Price:@products.Price
            <br>Description:@products.Description)

        </a>
    }
</div>

