@model GroupViewModel

<form asp-controller="Group" asp-action="Add" asp-antiforgery="true" method="post">

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="CriteriaID">Criterions</label>
        <select asp-for="CriteriaID" asp-items="Model.CriteriasAll"></select>
        <span asp-validation-for="CriteriaID"></span>
    </div>
    <button type="submit">Add</button>
</form>

